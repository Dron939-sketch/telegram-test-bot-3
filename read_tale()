    await query.edit_message_text(tale_text, reply_markup=reply_markup, parse_mode="HTML")

async def tale_part3(update: Update, context: ContextTypes.DEFAULT_TYPE):
    """–¢—Ä–µ—Ç—å—è —á–∞—Å—Ç—å —Å–∫–∞–∑–∫–∏"""
    query = update.callback_query
    await query.answer()
    
    tale_text = (
        f"üìñ <b>–ú–ê–°–¢–ï–† –ú–ï–ß–ê</b> (–ø—Ä–æ–¥–æ–ª–∂–µ–Ω–∏–µ)\n\n"
        f"–ò —Ç–æ–≥–¥–∞ –º–æ–ª–æ–¥–æ–π —á–µ–ª–æ–≤–µ–∫ —Ä–µ—à–∏–ª –æ—Ç–ø—Ä–∞–≤–∏—Ç—å—Å—è –≤ –≥–æ—Ä—ã, –Ω–∞ –ø–æ–∏—Å–∫–∏ —Ç–∞–π–Ω—ã—Ö –∫—É–∑–Ω–µ—Ü–æ–≤. –û–Ω —à—ë–ª –¥–Ω–∏ –∏ –Ω–æ—á–∏. "
        f"–í—Å—Ç–∞–≤–∞–ª —Å –≤–æ—Å—Ö–æ–¥–æ–º, –ª–æ–∂–∏–ª—Å—è —Å–ø–∞—Ç—å, –∫–æ–≥–¥–∞ —Å–æ–ª–Ω—Ü–µ —É–∂–µ –¥–∞–≤–Ω–æ —Å–µ–ª–æ. –û–Ω —Å–ø–∞–ª –º–∞–ª–æ –∏ –≤—Å—ë —à—ë–ª –∏ —à—ë–ª "
        f"–¥–∞–ª–µ–∫–æ –≤ –≥–æ—Ä—ã. –ò –Ω–∞–∫–æ–Ω–µ—Ü –æ–Ω –Ω–∞—à—ë–ª –¥–∞–ª–µ–∫–æ –≤ –°–∏–Ω–∏—Ö –≥–æ—Ä–∞—Ö —Ç–∞–π–Ω—ã—Ö –∫—É–∑–Ω–µ—Ü–æ–≤ –∏ —Ä–∞—Å—Å–∫–∞–∑–∞–ª –æ —Å–≤–æ—ë–º –ø–æ–ª–æ–∂–µ–Ω–∏–∏. "
        f"–û–Ω –ø–æ–ø—Ä–æ—Å–∏–ª –≤—ã–∫–æ–≤–∞—Ç—å –µ–º—É –º–µ—á, –∫–æ—Ç–æ—Ä—ã–π –±—ã –∫–∞–∑–∞–ª—Å—è –Ω–∞—Å—Ç–æ—è—â–∏–º –ú–µ—á–æ–º –ú–∞—Å—Ç–µ—Ä–∞. –ö—É–∑–Ω–µ—Ü—ã –≤—ã—Å–ª—É—à–∞–ª–∏ –µ–≥–æ –∏ –æ—Ç–≤–µ—Ç–∏–ª–∏:\n\n"
        f"<i>‚Äî –¢—ã —Ö–æ—á–µ—à—å —Å—Ç–∞—Ç—å –ú–∞—Å—Ç–µ—Ä–æ–º –∏ —Ç–µ–±–µ –Ω—É–∂–µ–Ω –ú–µ—á. –•–æ—Ä–æ—à–æ.</i>\n\n"
        f"–ò –æ–Ω–∏ –≤—ã–∫–æ–≤–∞–ª–∏ –µ–º—É –º–µ—á, –∫–æ—Ç–æ—Ä—ã–π —Ç–∞–∫ –∂–µ —Å–≤–µ—Ä–∫–∞–ª –±–ª–∞–≥–æ—Ä–æ–¥–Ω–æ–π —Å—Ç–∞–ª—å—é, –ª–µ–≥–∫–æ —Ä–∞—Å—Å–µ–∫–∞–ª –∂–µ–ª–µ–∑–æ, —à—ë–ª–∫ –∏–ª–∏ –≤–æ–ª–æ—Å, "
        f"–±—ã–ª –≤–µ–ª–∏–∫–æ–ª–µ–ø–Ω–æ —Å–±–∞–ª–∞–Ω—Å–∏—Ä–æ–≤–∞–Ω, –ø–æ–∫—Ä—ã—Ç —Å–ª–æ–∂–Ω–æ–π –∑–∞–º—ã—Å–ª–æ–≤–∞—Ç–æ–π —á–µ–∫–∞–Ω–∫–æ–π –∏ –≤—ã–≥–ª—è–¥–µ–ª –∫–∞–∫ —Å–∞–º—ã–π –Ω–∞—Å—Ç–æ—è—â–∏–π –ú–µ—á –ú–∞—Å—Ç–µ—Ä–∞. "
        f"–Æ–Ω–æ—à–∞ —Å —Ä–∞–¥–æ—Å—Ç—å—é –∏ –±–ª–∞–≥–æ–¥–∞—Ä–Ω–æ—Å—Ç—å—é –ø—Ä–∏–Ω—è–ª —Å–≤–æ–π –Ω–æ–≤—ã–π –º–µ—á, –ø–æ–∫–ª–æ–Ω–∏–ª—Å—è —Ç–∞–π–Ω—ã–º –∫—É–∑–Ω–µ—Ü–∞–º –∏ –æ—Ç–ø—Ä–∞–≤–∏–ª—Å—è –≤ –ø—É—Ç—å.\n\n"
        f"–û–Ω —Å—Ä–∞–∂–∞–ª—Å—è –≤–æ –º–Ω–æ–≥–∏—Ö –±–∏—Ç–≤–∞—Ö –∏ –ø–æ–±–µ–∂–¥–∞–ª. –°–ª–∞–≤–∞ –æ –Ω—ë–º —Ä–∞–∑–Ω–æ—Å–∏–ª–∞—Å—å –≤—Å—ë –¥–∞–ª—å—à–µ –ø–æ –¥–∞–ª—ë–∫–æ–π —Å—Ç—Ä–∞–Ω–µ, "
        f"–æ–ø–µ—Ä–µ–∂–∞–ª–∞ –µ–≥–æ –ø–æ—è–≤–ª–µ–Ω–∏–µ, –ø—Ä–∏–≤–æ–¥–∏–ª–∞ –≤ –≤–æ—Å—Ç–æ—Ä–≥ –¥—Ä—É–∑–µ–π, –≤—Å–µ–ª—è–ª–∞ —É–≤–∞–∂–µ–Ω–∏–µ –≤ —Å–µ—Ä–¥—Ü–∞ –ø—Ä–æ—Ç–∏–≤–Ω–∏–∫–æ–≤. "
        f"–û–Ω –ø—Ä–æ–∂–∏–ª –±–æ–≥–∞—Ç—É—é, –¥–æ—Å—Ç–æ–π–Ω—É—é –∂–∏–∑–Ω—å –∏ –æ–¥–Ω–∞–∂–¥—ã, –Ω–∞–∫–æ–Ω–µ—Ü, —É—à—ë–ª –Ω–∞ –ø–æ–∫–æ–π, –ø–æ—Å–µ–ª–∏–ª—Å—è –≤ –æ–¥–Ω–æ–º –≥–æ—Ä–æ–¥–µ "
        f"–¥–∞–ª—ë–∫–æ–π —Å—Ç—Ä–∞–Ω—ã –∏ –º–Ω–æ–≥–æ –ª–µ—Ç –∂–∏–ª —Å–ø–æ–∫–æ–π–Ω–æ –∏ —Å—á–∞—Å—Ç–ª–∏–≤–æ. –ò –ª–∏—à—å –∏–Ω–æ–≥–¥–∞, –∫–æ–≥–¥–∞ –≥–æ—Å—Ç–∏ –≤–æ—Å—Ö–≤–∞–ª—è–ª–∏ –µ–≥–æ, "
        f"–Ω–∞—Å—Ç–æ—è—â–µ–≥–æ –ú–∞—Å—Ç–µ—Ä–∞ –ú–µ—á–∞, –µ–º—É —Å—Ç–∞–Ω–æ–≤–∏–ª–æ—Å—å –Ω–µ–ª–æ–≤–∫–æ. –í–µ–¥—å –æ–Ω-—Ç–æ –∑–Ω–∞–ª, —á—Ç–æ —É –Ω–µ–≥–æ —Ç–∞–∫ –∏ –Ω–µ –±—ã–ª–æ "
        f"–Ω–∞—Å—Ç–æ—è—â–µ–≥–æ –ú–µ—á–∞ –ú–∞—Å—Ç–µ—Ä–∞."
    )
    
    keyboard = [[InlineKeyboardButton("‚ñ∂Ô∏è –§–∏–Ω–∞–ª", callback_data="tale_final")]]
